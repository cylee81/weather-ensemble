<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Hello,"
            android:textSize="25dp"
            android:id="@+id/hello"
            android:paddingLeft="15dp"
            android:textStyle="bold"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/hello"
            android:paddingTop="15dp"
            android:id="@+id/sm_layout"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Source Management"
                android:padding="15dp"
                android:textStyle="bold"
                android:id="@+id/sourceM"
                android:textSize="18dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/sourceM"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="80dp"
                android:text="openapi"
                android:id="@+id/s1"
                android:textSize="18dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/s1"
                app:layout_constraintTop_toBottomOf="@id/sourceM"
                android:paddingLeft="10dp"
                android:text="-"
                android:id="@+id/s1m"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/s1m"
                app:layout_constraintTop_toBottomOf="@id/sourceM"
                android:paddingLeft="10dp"
                android:text="0"
                android:id="@+id/s1num"
                android:textSize="18dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/s1num"
                app:layout_constraintTop_toBottomOf="@id/sourceM"
                android:paddingLeft="10dp"
                android:text="+"
                android:id="@+id/s1p"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/s1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="80dp"
                android:paddingTop="10dp"
                android:text="hgbrasil"
                android:id="@+id/s2"
                android:textSize="18dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/s2"
                app:layout_constraintTop_toBottomOf="@id/s1"
                android:paddingLeft="10dp"
                android:text="-"
                android:id="@+id/s2m"
                android:paddingTop="10dp"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/s2m"
                app:layout_constraintTop_toBottomOf="@id/s1"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:text="0"
                android:id="@+id/s2num"
                android:textSize="18dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/s2num"
                app:layout_constraintTop_toBottomOf="@id/s1"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="+"
                android:id="@+id/s2p"
                android:textSize="20dp"
                android:textStyle="bold"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/sm_layout"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/theme_layout"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Theme"
                android:padding="15dp"
                android:textStyle="bold"
                android:id="@+id/theme"
                android:textSize="18dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/theme"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="80dp"
                android:text="Beach"
                android:id="@+id/t1"
                android:textSize="18dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/t1"
                app:layout_constraintStart_toStartOf="@id/t1"
                android:paddingTop="15dp"
                android:text="Mountain"
                android:id="@+id/t2"
                android:textSize="18dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/t2"
                app:layout_constraintStart_toStartOf="@id/t1"

                android:text="Rain"
                android:id="@+id/t3"
                android:paddingTop="15dp"
                android:textSize="18dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/theme_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="60dp"
            android:textSize="30dp"
            android:text="Logout"
            android:background="#FFFFFF"
            android:textStyle="bold"
            android:id="@+id/logout"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
