<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/locationTV"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:text="Location:"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/locationSP"
            />
        <Spinner
            android:id="@+id/locationSP"
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/locationTV"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/sourceTV"
            android:gravity="center_vertical"
            android:text="Source:"
            android:padding="8dp"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/locationTV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sourceSP"
            />
        <Spinner
            android:id="@+id/sourceSP"
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/locationSP"
            app:layout_constraintStart_toEndOf="@id/sourceTV"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location"
            app:layout_constraintTop_toBottomOf="@id/sourceTV"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="50dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/todayTV"
            android:text="Today"
            app:layout_constraintTop_toBottomOf="@id/location"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="50dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/highT"
            app:layout_constraintTop_toBottomOf="@id/todayTV"
            app:layout_constraintStart_toStartOf="parent"
            android:text="highT"
            android:padding="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lowT"
            app:layout_constraintTop_toBottomOf="@id/todayTV"
            app:layout_constraintStart_toEndOf="@id/highT"
            android:text="LowT"
            android:padding="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rain"
            app:layout_constraintTop_toBottomOf="@id/todayTV"
            app:layout_constraintStart_toEndOf="@id/lowT"
            android:text="Rain"
            android:padding="20dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
