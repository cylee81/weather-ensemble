<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/locationTV"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:text="Location:"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/locationSP"
            />
        <Spinner
            android:id="@+id/locationSP"
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/locationTV"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/sourceTV"
            android:gravity="center_vertical"
            android:text="Source:"
            android:padding="8dp"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/locationTV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sourceSP"
            />
        <Spinner
            android:id="@+id/sourceSP"
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/locationSP"
            app:layout_constraintStart_toEndOf="@id/sourceTV"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location"
            app:layout_constraintTop_toBottomOf="@id/sourceTV"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="30dp"
            android:paddingTop="30dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textSize="30sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/todayTV"
            android:text="Today"
            app:layout_constraintTop_toBottomOf="@id/location"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="20dp"
            android:textStyle="bold"
            android:textSize="30sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/temp"
            android:text="Temperature (Â°C)"
            app:layout_constraintTop_toBottomOf="@id/todayTV"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"
            android:textSize="25dp"
            android:textStyle="italic"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/highT_TV"
            app:layout_constraintTop_toBottomOf="@id/temp"
            android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Max"
            android:textStyle="bold"
            android:padding="20dp"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/highT"
            app:layout_constraintTop_toBottomOf="@id/highT_TV"
            android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/highT_TV"
            android:text="highT"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lowT_TV"
            app:layout_constraintTop_toBottomOf="@id/temp"
            app:layout_constraintStart_toEndOf="@id/highT_TV"
            android:text="Min"
            android:textStyle="bold"
            android:textSize="20dp"
            android:padding="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lowT"
            app:layout_constraintTop_toBottomOf="@id/lowT_TV"
            app:layout_constraintStart_toStartOf="@id/lowT_TV"
            app:layout_constraintEnd_toEndOf="@id/lowT_TV"
            android:text="lowT"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rainTV"
            app:layout_constraintTop_toBottomOf="@id/highT"
            app:layout_constraintStart_toStartOf="@id/temp"
            android:text="Humidity (%)"
            android:textSize="25dp"
            android:textStyle="italic"
            android:padding="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rain"
            app:layout_constraintTop_toBottomOf="@id/rainTV"
            app:layout_constraintStart_toStartOf="@id/rainTV"
            app:layout_constraintEnd_toEndOf="@id/rainTV"
            android:padding="15dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="rain"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/star_but"
            android:src="@drawable/unstar"
            app:layout_constraintStart_toEndOf="@id/location"
            app:layout_constraintTop_toBottomOf="@id/sourceTV"
            app:layout_constraintBottom_toBottomOf="@id/location"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
